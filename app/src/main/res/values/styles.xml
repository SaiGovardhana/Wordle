<resources>

    <style name="Widget.Theme.Wordle.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:tag">text</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="Widget.Theme.Wordle.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>